  .boardLinks
    display none
    width 260px
    position absolute
    left 40%
    background-color #E8D0C5
    border-radius 0 0 10px 10px
    p
      padding 0
      margin 0
      width 100%
      &:hover
        background-color #C0A89D
      a
        font-family "madeInChina"
        color #873939
