      padding-top 0
      padding-bottom 0
      background-size 100% 100%
      margin-left auto
      margin-right auto
      height 52vh
      width 100vw

      //mediaQ for tablet portrait
    @media (max-width: 768px) and (orientation: portrait)
      background-size 100% 100%
      top 5%
      height 65vh
      width 100vw
      padding 0

    @media (max-width: 1024px) and (orientation: landscape)
      background-size 100% 100%
      top 5%
      height 65vh
      width 100vw
      padding 0

    table
      background-image url('/gfx/vectors/whiteBoard.png')
      background-position center
      background-repeat no-repeat
      background-size 100% 100%
