//-- The landing page ----------------------------------------------------------

*,
*::before,
*::after
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  box-sizing border-box

.floating
  float left
  -webkit-animation-name Floatingx
  -webkit-animation-duration 3s
  -webkit-animation-iteration-count infinite
  -webkit-animation-timing-function ease-in-out
  -moz-animation-name Floating
  -moz-animation-duration 3s
  -moz-animation-iteration-count infinite
  -moz-animation-timing-function ease-in-out
  margin-left 30px
  margin-top 5px

@-webkit-keyframes Floatingx{
    from {-webkit-transform:translate(0, 0px);}
    65% {-webkit-transform:translate(0, 15px);}
    to {-webkit-transform: translate(0, -0px);    }
}

@-moz-keyframes Floating{
    from {-moz-transform:translate(0, 0px);}
    65% {-moz-transform:translate(0, 15px);}
    to {-moz-transform: translate(0, -0px);}
}

@-webkit-keyframes steam {
  0%  { opacity: 0; }
  40% { opacity: 1; }
  100% { opacity: 0; -webkit-transform: translate(-10%, -35%) ; }
}

@-webkit-keyframes wiggle {
	0% {
		-webkit-transform:rotate(4deg);
	}
	50% {
		-webkit-transform:rotate(-4deg);
	}
	100% {
		-webkit-transform:rotate(4deg);
	}
}

.wiggle:hover {
	-webkit-animation: wiggle 3s infinite;
}

body
  background-image url("/gfx/vectors/fullBackground.png")
  background-position center
  background-repeat no-repeat
  background-size cover
  height 100vh
  width 100%

.index

  nav
    position absolute
    z-index 4
    display inline-block
    background-color #E8D0C5
    width 100%
    box-shadow: 1px 1px 3px black
    font-family "madeInChina"
    color #873939
    font-size: 1.5em

    ul
      display flex
      flex-direction row
      justify-content space-around
      padding 0
      margin 15px
      margin 0
      padding-top 10px
      @media (max-width: 667px)
        padding 2%

    li
      list-style none
      img
        width 9%

      &:last-child
        @media (max-width: 667px)
          display none
    .first-child
      @media (max-width: 667px)
        margin auto

  .cloud2
    position absolute
    z-index 3
    right 4%
    top 50%
    height 15%

  .cloud1
    position absolute
    z-index 3
    top 50%
    height 15%

  #gameBoard
    z-index 1
    position relative
    top 8%
    background-image url('/gfx/vectors/Board.png')
    background-position center
    background-repeat no-repeat
    background-size 100% 100%
    padding 10%
    padding-top 5.5%
    width 80vw
    height 57vh
    margin-left auto
    margin-right auto

    //mediaQ for phone
