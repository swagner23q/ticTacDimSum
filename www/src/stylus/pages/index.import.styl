  .steam
    -webkit-animation steam 2s 1s infinite
    position absolute
    bottom 15%
    z-index 4
    left 18%
    img
      animation: fade 2s linear;
  .dumplings
    img
      position absolute
      height 25%
      bottom 0
      left 15%
